{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "ES2021"],
    "module": "ES2022",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "ES2021",
    "types": ["node"],
    "sourceMap": true
  },
  "include": ["**/*.ts"]
}
